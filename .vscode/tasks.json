{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "run typescript once",
            "args": ["run", "tsc"]
        },
        {
            "taskName": "watch typescript",
            "args": ["run", "tsc:w"]
        },
        {
            "taskName": "run less once",
            "args": ["run", "less"]
        },
        {
            "taskName": "watch less",
            "args": ["run", "less:w"]
        },
        {
            "taskName": "start http server",
            "args": ["run", "http"]
        },
        {
            "taskName": "dev loop",
            "args": ["run", "dev"]
        },
        {
            "taskName": "dev loop (man)",
            "args": ["run", "dev-man"]
        },
        {
            "taskName": "dev loop (ide)",
            "args": ["run", "dev-ide"]
        },
        {
            "taskName": "dev loop (editor)",
            "args": ["run", "dev-edit"]
        },
        {
            "taskName": "update gh-pages",
            "args": ["run", "pages"]
        }
    ]
}